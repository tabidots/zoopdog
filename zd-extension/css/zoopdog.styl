// out: zoopdog.css

@import colors

#zoopdog-popup // This is the styling for the iframe, not the Chrome popup
  margin-top 5px
  background white
  border none
  -webkit-box-shadow 4px 4px 19px -2px rgba(0,0,0,0.47)
  -moz-box-shadow 4px 4px 19px -2px rgba(0,0,0,0.47)
  box-shadow 4px 4px 19px -2px rgba(0,0,0,0.47)
  border-radius 10px 10px 10px 10px

.zoopdog-cpanel
  background $lightneutral
  padding 10px
  width 200px
  text-align center
  font-family "Fira Sans", sans-serif
  h1
    color $darkblue
    padding-top 0
  a
    text-decoration none
    background $darkred
    color white
    padding 2px 4px
    border-radius 5px 5px 5px 5px
    &:hover
      font-weight bold
      background $lightred
    &:focus
      outline 0

#zoopdog-switch-wrapper
  margin 15px auto
  width 100px
  input[type=checkbox]{
  	height: 0;
  	width: 0;
  	visibility: hidden;
  }

  label {
  	cursor: pointer;
  	text-indent: -9999px;
  	width: 100px;
  	height: 50px;
  	background: $darkneutral;
  	display: block;
  	border-radius: 50px;
  	position: relative;
  }

  label:after {
  	content: '';
  	position: absolute;
  	top: 5px;
  	left: 5px;
  	width: 40px;
  	height: 40px;
  	background: $darkred;
  	border-radius: 40px;
  	transition: 0.3s;
  }

  input:checked + label {
  	background: $lightred;
  }

  input:checked + label:after {
  	left: calc(100% - 5px);
  	transform: translateX(-100%);
  }

  label:active:after {
  	width: 50px;
  }

ul.dialect-form
  margin 0
  padding 0
  text-align left
  li
    display block
